---
import icons from '../inputs/icons';

const { type } = Astro.props;
---

<svg class={`icon ${type}`} viewbox="0 0 512 512">
  <path d={icons.get(type)}></path>
</svg>

<style>
  .icon {
    fill: white;
    opacity: 0.9;
    width: 50%;
    height: 50%;
  }
  .icon.mail {
    width: 35%;
    height: 35%;
  }
</style>
